   <!--TITULO PRINCIPAL-->
   <div class ="container registro"> <h1><i class='bx bxl-baidu bx-md'></i> CATSHEIN</h1></div>
   <!--FIN TITULO PRINCIPAL-->

   <!--LISTA PRODUCTOS-->
    <div class="container" id="lista productos">
      <div class ="row">
        <% results.forEach((product) => { %>
        <div class="col-sm-6 mb-3 mb-sm-0">
          
          <div class="card"> 
            <div class="card-body">
            
              <h5 class="card-title"># <%= product.id%></h5>
              <p class="card-text"><strong><%= product.product_name  %></strong></div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Precio:</strong> <%= product.price %> $</li>
              <li class="list-group-item"><strong>Talla:</strong> <%= product.size %></li>
              <li class="list-group-item"><strong>Cantidad:</strong> <%= product.quantity %></li>
              <li class="list-group-item"><%= product.desscription %></li>
            </ul>
            <img src="data:image/png;base64,<%= Buffer.from(product.img_product).toString('base64') %>" class="card-img-top" style="height: 500px; width: auto; justify-content: center;" id="showimg" alt="...">
            <div class="card-body">
              <a href="/update_delete.ejs/<%= product.id%>" class="btn btn-outline-info"><i class='bx bxs-pencil'></i> Actualizar</a>
              <a href="/delete/<%= product.id %>"><button class="btn btn-outline-danger" type="button"><i class='bx bxs-trash'></i> Borrar</button></a>
            </div>
          </div>
        </div>
        <% }) %> 
      </div>
      
    </div><br><br>

   <!--FIN LISTA PRODUCTOS-->
   
    
