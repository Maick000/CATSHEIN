   <div class ="container registro"> <h1><i class='bx bxl-baidu bx-md'></i>  Editar Registro</h1></div>
   <!--FIN TITULO PRINCIPAL-->

      <!--FORMULARIO-->
      <% if(product) { %>
      <div class="container">
        <div class="card border-secondary">
            <div class="card-header"><i class='bx bxs-magic-wand'></i> Actualizar Producto</div>
            <div class="card-body">
                <form enctype="multipart/form-data" action="/update" method="POST">

                    <input id="id" name="id" value="<%= product.id %>" hidden/>
  
                    <div class="input-group">
                        <input type="text" class="form-control" id="product_name" name="product_name" value="<%= product.product_name %>" placeholder="Nombre del Producto" aria-label="Recipient's username with two button addons">
                      </div> <br>
  
                      <div class="input-group">
                        <input type="text" class="form-control" id="price" name="price" value="<%= product.price %>" placeholder="Precio" aria-label="Recipient's username with two button addons">
                      </div> <br>
  
                      <div class="input-group">
                        <label class="input-group-text" for="inputGroupSelect01">Talla</label>
                        <select id="size" name="size" class="form-select" id="inputGroupSelect01">
                            <option selected value="S">S</option>
                            <option <%= product.size =='M' ? "selected" : '' %> value="M">M</option>
                            <option <%= product.size =='L' ? "selected" : '' %> value="L">L</option>
                            <option <%= product.size =='XL' ? "selected" : '' %> value="XL">XL</option>
                        </select>
                        </ul>
                      </div> <br>
  
                      <div class="input-group">
                        <input type="text" class="form-control" id="quantity" name="quantity" value="<%= product.quantity %>" placeholder="Cantidad" aria-label="Recipient's username with two button addons">
                      </div> <br>
  
                      <div class="input-group">
                        <span class="input-group-text">Descripcion</span>
                        <input type="text" id="description" name="description" value="<%= product.desscription %>" class="form-control" placeholder="Descripcion" aria-label="Recipient's username with two button addons">
                      </div> <br>
                      <div>
                      <% if(product.img_product){ %>
                        <img src="data:image/png;base64,<%= Buffer.from(product.img_product).toString('base64') %>" style="height: 200px; width: 200px; border-radius: 10px 10px 10px 10px;" id="showimg" alt="...">
                      <% } %>
                      </div><br>
                      <div class="input-group mb-3">
                        <input type="file" class="form-control" id="img_product" name="img_product" value="data:image/png;base64,<%= Buffer.from(product.img_product).toString('base64') %>">
                        <label class="input-group-text" for="inputGroupFile02"><i class='bx bx-archive-out ' ></i></label>
                      </div> 
                      
                      <button class="btn btn-outline-primary" type="submit"><i class='bx bxs-pencil'></i> Actualizar</button>
                      <a href="/delete/<%= product.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash'></i> Eliminar</a>
                </form>
            </div>
        </div>
    </div>
      <% } %>
     <!--FIN FORMULARIO-->
   
    
